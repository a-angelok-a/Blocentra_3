<Window x:Class="Blocentra_3.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blocentra_3.Views"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        Title="MainView"
        Height="600"
        Width="1000"
        MinHeight="100" 
        MinWidth="428"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Background="#282D33"
        prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ContentControl prism:RegionManager.RegionName="HeaderRegion" Grid.Row="0"/>

            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="15,5,0,10" HorizontalAlignment="Left">
                <TextBlock Margin="5,10,0,0" Text="Select Cryptocurrency:" Foreground="White" FontSize="13" FontWeight="Bold" />
                <ComboBox Height="28" Width="150"
                          ItemsSource="{Binding Currencies}"
                          SelectedItem="{Binding Symbol, Mode=TwoWay}"
                          Background="#1F2326"
                          Margin="5,10,0,0"
                          HorizontalAlignment="Left"/>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="1" Margin="15,5,15,10">
            <DataGrid ItemsSource="{Binding PricesFromExchanges}"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      Background="#1F2326"
                      Foreground="White"
                      GridLinesVisibility="All"
                      BorderBrush="#3A3F44"
                      BorderThickness="1"
                      RowBackground="#1F2326"
                      AlternatingRowBackground="#23282D"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      CanUserResizeRows="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HorizontalGridLinesBrush="#3A3F44"
                      VerticalGridLinesBrush="#3A3F44"
                       RowHeight="58">

                <DataGrid.Resources>
                    <!-- Стиль для заголовков -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2E343A"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderBrush" Value="#3A3F44"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>

                    <!-- Стиль выделенной строки -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#1F2326"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF8C00"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="*" />

                    <DataGridTextColumn Header="Bid Price (USD)" Width="*">
                        <DataGridTextColumn.Binding>
                            <Binding Path="BidPrice" StringFormat="{}{0:F2}" />
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Ask Price (USD)" Width="*">
                        <DataGridTextColumn.Binding>
                            <Binding Path="AskPrice" StringFormat="{}{0:F2}" />
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Exchange" Binding="{Binding ExchangeName}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
       
        <Grid Grid.Row="2" Margin="15,5,15,10">
            <StackPanel>
                <TextBlock Text="Best deals:" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>

                <TextBlock Foreground="White" FontSize="14" Margin="0,0,0,10">
                    <Run Text="Cheapest to buy at: " />
                    <Run Text="{Binding LowestPriceCurrency.ExchangeName}" FontWeight="SemiBold" />
                    <Run Text=" - " />
                    <Run Text="{Binding LowestPriceCurrency.AskPrice, StringFormat={}{0:C}}" FontWeight="SemiBold"/>
                </TextBlock>

                <TextBlock Foreground="White" FontSize="14">
                    <Run Text="Most profitable to sell at: " />
                    <Run Text="{Binding HighestPriceCurrency.ExchangeName}" FontWeight="SemiBold" />
                    <Run Text=" - " />
                    <Run Text="{Binding HighestPriceCurrency.BidPrice, StringFormat={}{0:C}}" FontWeight="SemiBold"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <ContentControl prism:RegionManager.RegionName="SplashScreenRegion" />
    </Grid>
</Window>
