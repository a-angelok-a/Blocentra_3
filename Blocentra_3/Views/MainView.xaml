<Window x:Class="Blocentra_3.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blocentra_3.Views"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        Title="MainView"
        Height="600"
        Width="1000"
        MinHeight="100" 
        MinWidth="428"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Background="#282D33"
        prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ContentControl prism:RegionManager.RegionName="HeaderRegion" Grid.Row="0"/>

            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="15,5,0,10" HorizontalAlignment="Left">
                <TextBlock Margin="5,10,0,0" Text="Select Cryptocurrency:" Foreground="White" FontSize="13" FontWeight="Bold" />
                <ComboBox Height="28" Width="150"
                          ItemsSource="{Binding Currencies}"
                          SelectedItem="{Binding Symbol, Mode=TwoWay}"
                          Background="#1F2326"
                          Margin="5,10,0,0"
                          HorizontalAlignment="Left"/>
            </StackPanel>

        </Grid>

        <DockPanel Grid.Row="1" Margin="12,0,12,0">
            <TextBlock DockPanel.Dock="Top" Margin="5,10,0,10" Foreground="White" FontSize="14" Text="Prices from exchanges:" FontWeight="Bold"/>
            <Border Margin="0,3,0,10" Background="#1F2326" CornerRadius="6" Padding="8" Opacity="0.95">
                <ItemsControl ItemsSource="{Binding PricesFromExchanges}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Foreground="White" FontSize="14"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </DockPanel>

        <Grid Grid.Row="2" Margin="15,5,15,10">
            <StackPanel>
                <TextBlock Text="Best deals:" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>

                <TextBlock Foreground="White" FontSize="14" Margin="0,0,0,10">
                    <Run Text="Cheapest to buy at: " />
                    <Run Text="{Binding LowestPriceCurrency.ExchangeName}" FontWeight="SemiBold" />
                    <Run Text=" - " />
                    <Run Text="{Binding LowestPriceCurrency.AskPrice, StringFormat={}{0:C}}" FontWeight="SemiBold"/>
                </TextBlock>

                <TextBlock Foreground="White" FontSize="14">
                    <Run Text="Most profitable to sell at: " />
                    <Run Text="{Binding HighestPriceCurrency.ExchangeName}" FontWeight="SemiBold" />
                    <Run Text=" - " />
                    <Run Text="{Binding HighestPriceCurrency.BidPrice, StringFormat={}{0:C}}" FontWeight="SemiBold"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <ContentControl prism:RegionManager.RegionName="SplashScreenRegion" />
    </Grid>
</Window>
